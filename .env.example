# Пример файла переменных окружения (.env)
# Скопируйте этот файл в .env и настройте его для своей среды
# Файл .env не должен храниться в Git

# Настройки сервера
AUTH_SERVER_ISSUER=http://localhost:9100

# Настройки базы данных
POSTGRES_USER=user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=auth_db
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/auth_db
SPRING_DATASOURCE_USERNAME=user
SPRING_DATASOURCE_PASSWORD=secure_password_here

# Настройки Redis
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379

# Настройки SMTP
SPRING_MAIL_HOST=smtp.example.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@example.com
SPRING_MAIL_PASSWORD=your_mail_password_here

# Настройки безопасности
AUTH_KEYSTORE_PASSWORD=your_keystore_password_here
AUTH_KEYSTORE_KEY_ALIAS=jwt-signing-key
AUTH_KEYSTORE_KEY_PASSPHRASE=your_key_passphrase_here

# Настройки администратора
ADMIN_EMAIL=admin@strollie.com
ADMIN_NICKNAME=admin

